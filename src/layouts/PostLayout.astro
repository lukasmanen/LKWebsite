---
import '../styles/global.css';
const { frontmatter = {}, content = '' } = Astro.props;
--- 
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{frontmatter.title} — Lukas Kelloniemi</title> 
</head>
<body>

  <nav>
    <div class="nav-inner">
      <a href="/" class="nav-logo">LK_</a>
      <ul class="nav-links">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/code">Code</a>
        <a href="/contact">Contact</a>
      </ul>
    </div>
  </nav>
 <main>
  <article class="post-content">
    <span class ="secetion-label">// {frontmatter.category}</span>
    <h1>{frontmatter.title}</h1>
    <p class="post-date">{frontmatter.date}</p>
    {frontmatter.image && (
        <img src={frontmatter.image} alt={frontmatter.title} class="post-image" />
      )}
    <hr class="post-divider" />
    <slot />
  </article>
</main>

  <footer>
    © {new Date().getFullYear()} Lukas Kelloniemi
  </footer>  
</body>
</html>