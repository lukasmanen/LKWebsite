---
import '../styles/global.css';
const { title = "Lukas Kelloniemi — VFX Artist" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <link rel="icon" type="image/x-icon" href="/LKIcon.ico" />
</head>


<body>

  <nav>
    <div class="nav-inner">
      <a href="/" class="nav-logo">LK_</a>
      <ul class="nav-links">
       <a href={`${import.meta.env.BASE_URL}/`}>Home</a>
      <a href={`${import.meta.env.BASE_URL}/about`}>About</a>
      <a href={`${import.meta.env.BASE_URL}/code`}>Code</a>
      <a href={`${import.meta.env.BASE_URL}/contact`}>Contact</a>

       </ul>
    </div>
  </nav>

  <main>
    <slot />
  </main>

  <footer>
    © {new Date().getFullYear()} Lukas Kelloniemi
  </footer>

</body>
</html>
